<h2 class="page-title">Lista de Agendamentos</h2>

<div class="card">
  <div class="card-header">
    <h3>Todos os Agendamentos</h3>
    <a href="/novo-agendamento" class="btn btn-primary">Novo Agendamento</a>
  </div>
  
  <% if (locals.agendamentos && agendamentos.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Data</th>
          <th>Horário</th>
          <th>Funcionário</th>
          <th>Sala</th>
          <th>Notebook</th>
          <th>Status</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
  <% agendamentos.forEach(ag => { %>
    <tr>
      <td><%= ag.id %></td>
      <td><%= new Date(ag.data_preenchimento).toLocaleDateString('pt-BR') %></td>
      <td><%= ag.horario %></td>
      <td><%= ag.funcionario_nome || ag.funcionario_id %></td>
      <td><%= ag.sala_nome || ag.sala_id %></td>
      <td><%= ag.notebook_modelo || ag.notebook_id %></td>
      <td>
        <% if (ag.cancelamento) { %>
          <span class="badge badge-danger">Cancelado</span>
        <% } else { %>
          <span class="badge badge-success">Ativo</span>
        <% } %>
      </td>
      <td>
        <button class="btn btn-danger btn-sm delete-agendamento" data-id="<%= ag.id %>">Excluir</button>
      </td>
    </tr>
  <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-center mt-3">Nenhum agendamento encontrado.</p>
  <% } %>
</div>